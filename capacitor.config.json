{
  "appId": "hendiman.com",
  "appName": "handiman",
  "webDir": "dist",
  "server": {
    "androidScheme": "https"
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": true,
    "icon": "public/avatar.jpg",
    "iconBackgroundColor": "#f27f0d"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 0,
      "autoHide": false,
      "backgroundColor": "#0b0b0f"
    },
    "StatusBar": {
      "style": "light",
      "backgroundColor": "#1a1a1a"
    },
    "PushNotifications": {
      "presentationOptions": ["badge", "sound", "alert"]
    },
    "NativeBiometric": {
      "useFallback": true
    }
  }
}
